<div class="body">
  <div class="container">
    <div class="row">
      <h1> <%= current_user.full_name %> </h1>
    </div>
      <h2>About Me</h2>
      <p><%= current_user.about %></p>
      <%= link_to edit_user_path do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <% if current_user.politician? %>
        <% unless current_user.items == [] %>
          <h2>My Listings</h2>
          <% current_user.items.each do |item| %>
            <h3><%= item.category %></h3>
            <p><%= item.description %></p>
            <p>£<%= item.price %></p>
          <% end %>
        <% end %>
      <% end %>
      <% unless current_user.bookings == [] %>
        <h2>My Bookings</h2>
        <% current_user.bookings.each do |booking| %>
          <h3><%= booking.item.category.capitalize %>: <%= booking.item.user.full_name %></h3>
          <p><%= booking.item.description %></p>
          <p><strong><%= booking.days %> days</strong></p>
          <% unless booking.total_price.nil? %>
            <p>£<%= booking.total_price %></p>
          <% end %>
        <% end %>
      <% end %>
  </div>
  </div>
</div>

