<div class="container row">
  <div class="col-lg-12 col-md-12 hide-sm">
    <div class="card-container-large">
        <div class="card-body">
          <div class="front card-index card-booking" style= "background-image: linear-gradient(180deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.8) 90%), url(<%= cl_image_path current_user.photo %>);">
            <h2> Hello <%= @user.full_name %>!</h2>
            <p>You have given us this email address:
              <%= @user.email %>
            </p>
            <p>This is what others see about you:</p>
            <p class="card-text">
              <%= @user.about%>
            </p>
            <p>Is this still up to date?</p>
            <p><%= link_to edit_user_path(@user) do  %>
              <i class="fas fa-pencil-alt change"></i>
            <% end %></p>

          </div>
        </div>
      </div>
   </div>
 </div>
 <div class="card-container-large">
   <div class="card-body">
   <% if current_user.politician? %>
     <% unless current_user.items == [] %>
        <ul>
         <li><h2>Here are you listings</h2></li>
       <% current_user.items.each do |item| %>
         <li><h3><%= item.category %></h3></li>
         <li><%= item.description %></li>
         <li><£<%= item.price %></li>
       <% end %>
       </ul>
     <% end %>
   <% end %>
   <% unless current_user.bookings == [] %>
   <div>
   <ul>
     <li><h2>Here are your bookings</h2></li>
     <% current_user.bookings.each do |booking| %>
       <div>
         <li>
           <h3>You have a <strong><%= booking.item.description %></strong>, that belongs to <%= booking.item.user.full_name %>.
             <% unless booking.days.nil? %>
               You are renting it <strong>for <%= booking.days %> days</strong>
             <% end %>
             <% unless booking.total_price.nil? %>and the total price of it is <strong>£
               <%= booking.total_price %>.</strong>
             <% end %>
           </h3>
         </li>
      <% end %>
   <% end %>
   </div>
  <p> I hope this is all you expected to see here ...</p>
  </ul>
  </div>
  </div>
</div>

