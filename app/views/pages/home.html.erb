<!-- Things for rent container -->
<div class="container">
  <h2>Items for Rent</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-4 col-xs-6 ">
        <div class="item-card-home whole-card">
          <div class="card-header">
            <p><%= item.user.full_name %></p>
            <%= link_to user_path(item.user) do %>
              <div class="card-header-avatar" style="background-image: url(<%= cl_image_path item.user.cl_photo %>)"></div>
            <% end %>
          </div>
          <%= link_to item_path(item) do %>
            <div class="card-body" style="background-image: url(<%= image_path item.photo %>)">
            </div>
            <div class="card-footer">
              <h3><%= item.description %></h3>
              <p>Â£<%= item.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
