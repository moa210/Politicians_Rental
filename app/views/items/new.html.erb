<div class="container">
  <h2>Would you like to add an item?</h2>
  <%= simple_form_for @item do |f| %>
    <%= f.label :category %>:
    <%= f.select :category, [['Accommodation','accommodation'],['Clothing','clothing'],['Transport','transport'],\
    ["Miscellaneous","miscellaneous"]] %>

    <%= f.input :description %>

    <%= f.input :price, input_html: { type: "number" } %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit %>
  <% end %>
</div>

