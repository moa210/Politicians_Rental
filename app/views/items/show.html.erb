<div class="banner">
  <div class="background-cover" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.8) 90%), url(<%= cl_image_path @item.photo %>);">
    <div class="container flexbox white">
      <% if @item.category == "accommodation" %>
        <h2><%= @item.user.full_name %>'s crib</h2>
      <% elsif @item.category == "clothing" %>
        <h2><%= @item.user.full_name %>'s threads</h2>
      <% elsif @item.category == "transport" %>
        <h2><%= @item.user.full_name %>'s wheels</h2>
      <% else %>
        <h2><%= @item.user.full_name %>'s listing</h2>
      <% end %>
      <p><strong>Â£<%= @item.price %></strong></p>
      <p><%= @item.description %></p>

      <% if policy(@item).edit? %>
        <%= link_to "Update", edit_item_path(@item) %>
      <% end %>
      <div class="front white-center opacity-form">
      <% if policy(@booking).create? %>
        <p>Book it here</p>
        <%= simple_form_for([@item, @booking]) do |f| %>
          <%= f.input :date_from, input_html: { id: 'date-from' }, as: :string %>
          <%= f.input :date_to, input_html: { id: 'date-to' }, as: :string %>
          <%= f.submit %>
        <% end %>
      <% end %>
      </div>
    <%= javascript_pack_tag 'datepicker' %>
    </div>
  </div>
</div>
