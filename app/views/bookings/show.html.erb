
<div class="banner flexbox3" style="background-image: linear-gradient(180deg, rgba(250,250,250,0.2) 0%, rgba(244,244,244,1) 80%), url(<%= image_path "parliament.jpg" %>);">
<div class="container flexbox_two">
    <h2 class="gray-text">Thank you for booking with <%= @booking.item.user.full_name %>!</h2>
    <div class = "card-body">
      <div class="card-container card-booking">
        <div class="front card-index" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.8) 90%), url(<%= cl_image_path @booking.item.photo %>);">
          <p></p>
          <p><%= @booking.item.description %>:</p>
          <p>Period:
          <% if (@booking.days).to_i <= 1 %>
            <%= @booking.days %>
           <%= "day"  %>
          <% else  %>
            <%= @booking.days %>
            <%= "days"  %>
          <% end %>
          </p>
          <p>Price: Â£<%= @booking.total_price %> </p>
          <p>Belongs to: <%= @booking.item.user.full_name %></p>
          <% if policy(@booking).edit? %>
            <% if policy(@booking).edit? %>
              <p><%= link_to "Update", edit_item_booking_path(@booking)%></p>
              <% end %>
              <% if policy(@booking).destroy? %>
               <p><%= link_to "Delete", booking_path(@booking),
                method: :delete,
                data: { confirm: "Are you sure you want to delete booking for #{@booking.item.description}?" }%></p>
              <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>
</div>

