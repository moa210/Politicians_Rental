<div class="banner-custom" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.8) 90%), url(<%= cl_image_path @item.photo %>);">
  <div class="background-cover" >
    <div class="form-container flexbox white">
      <div class="container">
        <h2>Update the booking you have made on <%= @booking.created_at.strftime("%A (%-d of %B),") %></h2>
        <div class="front white-center date-input opacity-form">
          <%= simple_form_for([@item, @booking]) do |f| %>
            <%= f.input :date_from, input_html: { id: 'date-from' }, as: :string %>
            <%= f.input :date_to, input_html: { id: 'date-to' }, as: :string %>
            <%= f.submit %>
          <% end %>
          <%= javascript_pack_tag 'datepicker' %>
        </div>
      </div>
    </div>
  </div>
</div>
